# Environment Variables for Banking RAG Server
# Copy this file to .env and fill in your values

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=text-embedding-3-small
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-01

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Optional: Redis Configuration (if using caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Database Configuration (if using persistent storage)
# DATABASE_URL=sqlite:///banking_rag.db
