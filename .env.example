# Environment Variables for Banking RAG Server
# Copy this file to .env and fill in your values

# Azure OpenAI Configuration

# Key for embeddings (text-embedding-3-small)
AZURE_OPENAI_EMBEDDING_API_KEY=sk-key
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://aiportalapi.stu-platform.live/jpe
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# Key for chat completions (GPT-4o-mini)
AZURE_OPENAI_CHAT_API_KEY=sk-key
AZURE_OPENAI_CHAT_ENDPOINT=https://aiportalapi.stu-platform.live/jpe
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=GPT-4o-mini



# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_SECRET_KEY=your-secret-key-here  # Change this in production!

# Database Configuration
# For SQLite (default): leave DATABASE_URL empty or use sqlite:///path/to/database.db
# For PostgreSQL: postgresql://username:password@localhost:5432/banking_rag
# For MySQL: mysql://username:password@localhost:3306/banking_rag
DATABASE_URL=

# Chat Configuration
CHAT_SESSION_TIMEOUT_HOURS=24
CHAT_HISTORY_RETENTION_DAYS=90
MAX_MESSAGES_PER_SESSION=1000

# Optional: Redis Configuration (if using caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Session Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365
